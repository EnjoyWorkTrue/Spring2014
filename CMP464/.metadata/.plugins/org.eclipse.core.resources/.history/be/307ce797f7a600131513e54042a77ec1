package utils;

import android.R;
import android.app.Activity;
import android.content.Context;
import android.view.View;
import android.view.ViewGroup;
import android.widget.ArrayAdapter;

public class custon_list_item extends ArrayAdapter<String> {
	private Activity ctx;
	public custon_list_item(Context context,Activity ctx) {
		super(context);
		this.ctx = ctx;
		// TODO Auto-generated constructor stub
	}
	
	@Override
	public View getView(int position, View convertView, ViewGroup parent) {
		View view = null;
		if(convertView != null){
			view = convertView;
		}
		else{
			view = ctx.getLayoutInflater().inflate(R.layout.)
		}
		
		return convertView;
	}

}
